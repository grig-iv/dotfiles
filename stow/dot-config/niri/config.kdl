// ────────────── Workspaces ──────────────
workspace "top"
workspace "mid"
workspace "bot"

// ────────────── Window Rules ──────────────

    window-rule {
        geometry-corner-radius 12
        clip-to-geometry true
    }

    window-rule {
        match at-startup=true app-id="com.mitchellh.ghostty"
        open-on-workspace "top"
        open-focused false
    }

    window-rule {
        match at-startup=true app-id="zen"
        open-on-workspace "mid"
        open-focused false
        default-column-width { proportion 1.0; }
    }

    window-rule {
        match at-startup=true app-id="anytype"
        open-on-workspace "bot"
        open-focused false
    }

    window-rule {
        match at-startup=true app-id="org.telegram.desktop"
        open-on-workspace "bot"
        open-focused false
    }

    window-rule {
        match app-id="org.pulseaudio.pavucontrol"
        open-floating true
        default-window-height { fixed 800; }
        default-column-width { fixed 800; }
    }

    window-rule {
        match title="Friends List"
        open-floating true
        default-window-height { fixed 800; }
        default-column-width { fixed 400; }
    }

    layer-rule {
        match namespace="^rofi$" 

        shadow {
            on
            softness 30
            spread 5
            offset x=0 y=5
            color "#00000064"
        }

        geometry-corner-radius 16
    }

// ────────────── Startup Applications ──────────────

    spawn-at-startup "gnome-keyring-daemon" "--start" "--components=pkcs11,secrets,ssh"
    spawn-sh-at-startup "/usr/lib/polkit-kde-authentication-agent-1 &" // Polkit
    spawn-sh-at-startup "swww-daemon"
    spawn-sh-at-startup "swww img ~/.local/assets/wallpaper.jpg --transition-fps 144"
    spawn-sh-at-startup "waybar"

    spawn-at-startup "Telegram"
    spawn-at-startup "ghostty"
    spawn-at-startup "zen-browser"
    spawn-sh-at-startup "flatpak run io.anytype.anytype &"

    // prefer-no-csd // Disable program decorations
    screenshot-path null // Disable screenshot saving

// ────────────── Layout Settings ──────────────

    layout {
        gaps 20

        struts {
            left 0
            right -4
            top -4
            bottom -4
        }

        center-focused-column "never" 
        // empty-workspace-above-first
        always-center-single-column

        preset-column-widths {
            proportion 0.5
            proportion 1.0
        }

        focus-ring {
            width 1
            active-color "#85B1CC"
            inactive-color "#505050"
        }

        shadow {
            on
            softness 10
            spread 1
            offset x=0 y=5
            color "#0007"
        }
    }

// ────────────── Environment Variables ──────────────

    environment {
        DISPLAY ":1"
        ELECTRON_OZONE_PLATFORM_HINT "auto"
        QT_QPA_PLATFORM "wayland"
        QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
        XDG_SESSION_TYPE "wayland"
        XDG_CURRENT_DESKTOP "niri"
    }

    hotkey-overlay {
        skip-at-startup
    }

// ────────────── Keybindings ──────────────

binds {
    MOD+SHIFT+ESCAPE                     { show-hotkey-overlay; }

    // ─── Applications ───
    MOD+RETURN                          { spawn-sh "ghostty --title='Xtal'"; }
    MOD+SHIFT+RETURN                    { spawn-sh "ghostty --title='Rassbery' -e ssh grig@192.168.1.117 -t tmux new -A -s main"; }
    MOD+SPACE                           { spawn-sh "rofi -show drun"; }
    MOD+B                               { spawn-sh "zen-browser"; }
    MOD+E                               { spawn-sh "nautilus"; }

    // ─── Audio Controls ───
    XF86AudioRaiseVolume                allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+"; }
    XF86AudioLowerVolume                allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-"; }
    XF86AudioMute                       allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    XF86AudioMicMute                    allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"; }
    XF86AudioNext                       allow-when-locked=true { spawn-sh "playerctl next"; }
    XF86AudioPause                      allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioPlay                       allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioPrev                       allow-when-locked=true { spawn-sh "playerctl previous"; }
    MOD+ALT+S                           allow-when-locked=true { spawn-sh "audio-sink-cycle"; }

    // ─── Window Movement and Focus ───
    MOD+Q                               { close-window; }

    MOD+LEFT                            { focus-column-left; }
    MOD+RIGHT                           { focus-column-right; }
    MOD+UP                              { focus-window-or-workspace-up; }
    MOD+DOWN                            { focus-window-or-workspace-down; }
    MOD+SHIFT+LEFT                      { move-column-left; }
    MOD+SHIFT+RIGHT                     { move-column-right; }
    MOD+SHIFT+UP                        { move-window-up-or-to-workspace-up; }
    MOD+SHIFT+DOWN                      { move-window-down-or-to-workspace-down; }

    MOD+PRIOR                           { focus-window-or-workspace-up; }
    MOD+NEXT                            { focus-window-or-workspace-down; }
    MOD+SHIFT+NEXT                      { move-column-to-workspace-down; }
    MOD+SHIFT+PRIOR                     { move-column-to-workspace-up; }

    MOD+HOME                            { focus-column-first; }
    MOD+END                             { focus-column-last; }
    MOD+CTRL+HOME                       { move-column-to-first; }
    MOD+CTRL+END                        { move-column-to-last; }

    MOD+CTRL+LEFT                       { focus-monitor-left; }
    MOD+CTRL+RIGHT                      { focus-monitor-right; }
    MOD+CTRL+UP                         { focus-monitor-up; }
    MOD+CTRL+DOWN                       { focus-monitor-down; }

    MOD+SHIFT+CTRL+LEFT                 { move-column-to-monitor-left; }
    MOD+SHIFT+CTRL+RIGHT                { move-column-to-monitor-right; }
    MOD+SHIFT+CTRL+UP                   { move-column-to-monitor-up; }
    MOD+SHIFT+CTRL+DOWN                 { move-column-to-monitor-down; }

    // ─── Workspace Switching ───
    MOD+WHEELSCROLLDOWN                 cooldown-ms=150 { focus-workspace-down; }
    MOD+WHEELSCROLLUP                   cooldown-ms=150 { focus-workspace-up; }
    MOD+CTRL+WHEELSCROLLDOWN            cooldown-ms=150 { move-column-to-workspace-down; }
    MOD+CTRL+WHEELSCROLLUP              cooldown-ms=150 { move-column-to-workspace-up; }

    MOD+WHEELSCROLLRIGHT                { focus-column-right; }
    MOD+WHEELSCROLLLEFT                 { focus-column-left; }
    MOD+CTRL+WHEELSCROLLRIGHT           { move-column-right; }
    MOD+CTRL+WHEELSCROLLLEFT            { move-column-left; }

    MOD+SHIFT+WHEELSCROLLDOWN           { focus-column-right; }
    MOD+SHIFT+WHEELSCROLLUP             { focus-column-left; }
    MOD+CTRL+SHIFT+WHEELSCROLLDOWN      { move-column-right; }
    MOD+CTRL+SHIFT+WHEELSCROLLUP        { move-column-left; }

    MOD+1                               { focus-workspace 1; }
    MOD+2                               { focus-workspace 2; }
    MOD+3                               { focus-workspace 3; }
    MOD+4                               { focus-workspace 4; }
    MOD+5                               { focus-workspace 5; }
    MOD+6                               { focus-workspace 6; }
    MOD+7                               { focus-workspace 7; }
    MOD+8                               { focus-workspace 8; }
    MOD+9                               { focus-workspace 9; }

    MOD+CTRL+1                          { move-column-to-workspace 1; }
    MOD+CTRL+2                          { move-column-to-workspace 2; }
    MOD+CTRL+3                          { move-column-to-workspace 3; }
    MOD+CTRL+4                          { move-column-to-workspace 4; }
    MOD+CTRL+5                          { move-column-to-workspace 5; }
    MOD+CTRL+6                          { move-column-to-workspace 6; }
    MOD+CTRL+7                          { move-column-to-workspace 7; }
    MOD+CTRL+8                          { move-column-to-workspace 8; }
    MOD+CTRL+9                          { move-column-to-workspace 9; }

    MOD+TAB                             { focus-workspace-previous; }

    // ─── Layout Controls ───
    MOD+F                               { maximize-window-to-edges; }
    MOD+SHIFT+F                          { fullscreen-window; }
    MOD+C                               { center-column; }
    MOD+P                               { switch-preset-column-width; }
    MOD+CTRL+C                          { center-visible-columns; }
    MOD+T                               { toggle-window-floating; }
    MOD+W                               { toggle-column-tabbed-display; }

    MOD+SHIFT+COMMA                     { set-column-width "-10%"; }
    MOD+SHIFT+PERIOD                    { set-column-width "+10%"; }
    MOD+SHIFT+MINUS                     { set-window-height "-10%"; }
    MOD+SHIFT+EQUAL                     { set-window-height "+10%"; }


    // ─── Screenshots ───
    MOD+SHIFT+S                         { screenshot; }

    // ─── Emergency Escape Key ───
    // Use this when a fullscreen app blocks your keybinds.
    // It disables any active keyboard shortcut inhibitor, restoring control.
    MOD+ESCAPE                          allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    // ─── Exit / Power ───
    CTRL+ALT+DELETE                     { quit; } // Also quits Niri
    MOD+SHIFT+P                         { power-off-monitors; } // Turn off screens (useful for OLED or privacy)
    MOD+O                               repeat=false { toggle-overview; }
}

// ────────────── Animation Settings ──────────────
    animations {
        workspace-switch {
            spring damping-ratio=1.0 stiffness=1000 epsilon=0.0001
        }
        window-open {
            duration-ms 200
            curve "ease-out-quad"
        }
        window-close {
            duration-ms 200
            curve "ease-out-cubic"
        }
        horizontal-view-movement {
            spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
        }
        window-movement {
            spring damping-ratio=1.0 stiffness=800 epsilon=0.0001
        }
        window-resize {
            spring damping-ratio=1.0 stiffness=1000 epsilon=0.0001
        }
        config-notification-open-close {
            spring damping-ratio=0.6 stiffness=1200 epsilon=0.001
        }
        screenshot-ui-open {
            duration-ms 300
            curve "ease-out-quad"
        }
        overview-open-close {
            spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
        }
    }

// ────────────── Cursor ──────────────

cursor {
    xcursor-theme "Bibata-Modern-Ice" // yay bibata-cursor-theme-bin
    xcursor-size 20

    hide-after-inactive-ms 3000
}

// ────────────── Input Configuration ──────────────

input {
    keyboard {
        xkb {
            layout "us,grig" 
            options "grp:alt_shift_toggle"
        }
    }

    workspace-auto-back-and-forth 
}

// ────────────── Output Configuration ──────────────

output "Acer Technologies XB271HU #ASP5iYvK20rd" {
    mode "2560x1440@143.998" 
    scale 1 
}
