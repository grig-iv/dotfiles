abbr cp='cp -ivr'
abbr mv='mv -iv'
abbr rm='rm -vI'
abbr mkdir='mkdir -pv'
abbr bc='bc -ql'
abbr ls='ls -la'

abbr grep='grep --color=auto'
abbr diff='diff --color=auto'
abbr ip='ip -color=auto'

